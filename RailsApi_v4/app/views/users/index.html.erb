
<div class="container">

  <h2>Danh sách nhân viên</h2>
  <table class="table table-bordered">
    <thead>
    <tr>
      <th>Id</th>
      <th>Firstname</th>
      <th>Lastname</th>
      <th>Username</th>
      <th>Passord</th>
      <th>Email</th>
      <th>Birthday</th>
      <th>Gender</th>
      <th>Status</th>
      <th colspan="2">
        <%= link_to new_user_path, class: "btn btn-success" , type: "button"  do %>
            <span class="glyphicon glyphicon-plus"></span>
            Thêm mới
        <% end %>
      </th>
      <!--<th></th>-->
      <!--<th></th>-->
    </tr>
    </thead>

    <tbody>
    <%= content_tag_for(:tr, @users) do |user| %>
        <td><%= user.id %></td>
        <td><%= user.firstname %></td>
        <td><%= user.lastname %></td>
        <td><%= user.username %></td>
        <td><%= user.passord %></td>
        <td><%= user.email %></td>
        <td><%= user.birthday %></td>
        <td><%= user.gender %></td>
        <td><%= user.status %></td>
        <!--<td><%= link_to 'Show', user %></td>-->
        <!--<td><%= link_to 'Edit', edit_user_path(user) %></td>-->
        <td><%= link_to 'Edit', edit_user_path(user), class: "btn btn-sm btn-warning" , type: "button" %></td>

        <td><%= link_to 'Destroy', user, class: "btn btn-sm btn-danger" , type: "button", method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% end %>
    </tbody>
  </table>
</div>



